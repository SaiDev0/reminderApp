{
  "expo": {
    "name": "Bill Reminder",
    "slug": "bill-reminder-app",
    "scheme": "billreminder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.personal.billreminder",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "remote-notification"
        ],
        "NSCameraUsageDescription": "Allow Bill Reminder to take photos of bills",
        "NSPhotoLibraryUsageDescription": "Allow Bill Reminder to access your photo library to attach bill documents",
        "NSFaceIDUsageDescription": "Allow Bill Reminder to use Face ID for secure authentication",
        "NSCalendarsUsageDescription": "Allow Bill Reminder to add bills to your calendar for better organization",
        "NSRemindersUsageDescription": "Allow Bill Reminder to create reminders for your bills",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.personal.billreminder",
      "permissions": [
        "NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_CALENDAR",
        "WRITE_CALENDAR"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-notifications"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "3c4f5f00-f4a3-4f0a-a47e-c2b35995d3f3"
      }
    }
  }
}
